<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.example.com.brapolar.Fragments.SingleSleepFragment">


    <RelativeLayout
        android:id="@+id/activity_sleep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="br.example.com.brapolar.Activities.SleepActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_date"
                tools:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:fontFamily="sans-serif-condensed"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:onClick="SetDate"
                android:textColor="@android:color/holo_green_dark"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Deitou:"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                        android:textSize="20sp" />

                    <TextView
                        android:text="TextView"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sleepTime"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_calendar"
                        android:id="@+id/imageView9"
                        android:onClick="setDateSleep"
                        android:layout_weight="1" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_alarm_on_black_24dp"
                        android:id="@+id/imageView7"
                        android:onClick="SetSleep"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Acordou:"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:textSize="20sp" />

                    <TextView
                        android:text="TextView"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/awakeTime"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_calendar"
                        android:id="@+id/imageView10"
                        android:onClick="setDateAwake"
                        android:layout_weight="1" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_alarm_on_black_24dp"
                        android:id="@+id/imageView8"
                        android:onClick="SetAwake"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:text="Quantidade de horas de sonho:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textSize="20sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TotalTime"
                android:textSize="20sp" />
            <View style="@style/Divider.Horizontal"/>
            <TextView
                android:text="Qualidade de sonho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:id="@+id/textView13" />

            <TextView
                android:paddingTop="16dp"
                android:text="Para definir como foi a sua qualidade de seu sonho ontem por favor, movimente o seguinte indicador reflejando quanto energizado vocÃª acordou "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:id="@+id/textView12" />

            <SeekBar
                android:paddingTop="16dp"
                android:id="@+id/seekBarSleep"
                android:max="100"
                android:progress="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:text="Salvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="SaveButton"
                android:id="@+id/button2" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
